#!/bin/bash

set -eu

function timed_run() {
    description=$1
    command=$2
    timer=$(date +%s)

    $command
    exit_code=$?
    timer=$(($(date +%s) - timer))

    verbose=${MM_VERBOSE_HOOKS:-0}

    if [ "$verbose" == "1" ]; then
        echo "ℹ️  $description - $timer seconds"
        echo "exit code: $exit_code"
    fi

    if [ $exit_code -ne 0 ]; then
        echo "ℹ️  $description - failed"
        exit $exit_code
    fi
}

# Check for local/precious first, fall back to global precious
if [ -x "local/precious" ]; then
    timed_run "precious lint" "local/precious lint --staged"
elif command -v precious &> /dev/null; then
    timed_run "precious lint" "precious lint --staged"
else
    echo "❌ precious not found. Please install precious or add local/precious"
    exit 1
fi
